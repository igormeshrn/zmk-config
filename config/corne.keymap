#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp ESC               &kp Q  &kp W  &kp E     &kp R  &kp T          &kp Y    &kp U          &kp I      &kp O    &kp P     &kp DOUBLE_QUOTES
&mt LEFT_CONTROL TAB  &kp A  &kp S  &kp D     &kp F  &kp G          &kp H    &kp J          &kp K      &kp L    &kp SEMI  &kp LEFT_PARENTHESIS
&kp LSHFT             &kp Z  &kp X  &kp C     &kp V  &kp B          &kp N    &kp M          &kp COMMA  &kp DOT  &kp FSLH  &kp LEFT_BRACE
                                    &kp LGUI  &mo 1  &lt 2 SPACE    &kp RET  &kp BACKSPACE  &kp RALT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp ESCAPE  &kp N1           &kp N2       &kp N3     &kp N4          &kp N5              &kp N6             &kp N7           &kp N8        &kp N9                &kp N0                 &kp BSPC
&trans      &kp EXCLAMATION  &kp AT_SIGN  &kp HASH   &kp DOLLAR      &kp PERCENT         &kp CARET          &kp AMPERSAND    &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp COLON
&kp LSHFT   &trans           &kp PLUS     &kp MINUS  &kp LEFT_BRACE  &kp LEFT_BRACKET    &kp RIGHT_BRACKET  &kp RIGHT_BRACE  &kp EQUAL     &kp UNDERSCORE        &trans                 &trans
                                          &kp LGUI   &trans          &mo 3               &kp RET            &trans           &kp RALT
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &trans  &kp PAGE_UP     &kp UP_ARROW  &kp PAGE_DOWN  &kp HOME    &trans  &kp PAGE_UP     &kp UP_ARROW  &kp PAGE_DOWN  &kp HOME  &trans
&trans  &trans  &kp LEFT_ARROW  &kp DOWN      &kp RIGHT      &kp END     &trans  &kp LEFT_ARROW  &kp DOWN      &kp RIGHT      &kp END   &trans
&trans  &trans  &trans          &trans        &trans         &trans      &trans  &trans          &trans        &trans         &trans    &trans
                                &trans        &mo 3          &trans      &trans  &trans          &trans
            >;
        };

        layer_3 {
            bindings = <
&trans      &trans        &trans        &trans        &trans        &trans          &kp C_VOLUME_UP    &trans  &trans  &trans  &trans  &trans
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &kp C_VOLUME_DOWN  &trans  &trans  &trans  &trans  &trans
&trans      &trans        &trans        &trans        &trans        &trans          &trans             &trans  &trans  &trans  &trans  &trans
                                        &trans        &trans        &trans          &trans             &trans  &trans
            >;
        };
    };
};
